<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.projectferns.caloriecounterapp.PostAddActivity">

    <EditText
        android:id="@+id/food_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/food_name_hint"
        android:inputType="textAutoComplete"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/food_calories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/food_calories_hint"
        android:inputType="number"
        android:layout_below="@id/food_name"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/food_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/food_description_hint"
        android:layout_below="@id/food_calories"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/food_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/food_date_hint"
        android:layout_below="@id/food_description"
        android:layout_alignParentLeft="true"
        android:inputType="date" />

</RelativeLayout>
